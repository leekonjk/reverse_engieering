<?xml version="1.0" encoding="utf-8"?>
<com.android.calculator2.common.view.displaylayout.CalculatorDisplay xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/display"
    android:background="?attr/colorSurface"
    android:clipChildren="false"
    android:layout_width="0dp"
    android:layout_height="0dp">
    <include layout="@layout/toolbar"/>
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/formula_container"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <com.android.calculator2.common.view.scrollview.CalculatorScrollView
            android:id="@+id/formula_scroll_view"
            android:background="@android:color/transparent"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:importantForAccessibility="no"
            android:layoutDirection="ltr">
            <com.android.calculator2.common.view.formulaview.CalculatorFormula
                android:ellipsize="none"
                android:id="@+id/formula"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textDirection="ltr"
                style="@style/DisplayTextStyle.Formula"/>
        </com.android.calculator2.common.view.scrollview.CalculatorScrollView>
        <com.android.calculator2.common.view.result.CalculatorResult
            android:id="@+id/result_final"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:bufferType="spannable"
            android:cursorVisible="false"
            android:singleLine="true"
            android:inputType="none"
            android:layoutDirection="ltr"
            style="@style/DisplayTextStyle.Formula"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/drag_handle_view"
        android:clickable="false"
        android:layout_width="24dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/drag_handle_margin_top"
        android:layout_marginBottom="@dimen/drag_handle_margin_bottom"
        android:src="@drawable/drag_handle"
        android:tint="?android:attr/textColorSecondary"
        android:importantForAccessibility="no"/>
</com.android.calculator2.common.view.displaylayout.CalculatorDisplay>
